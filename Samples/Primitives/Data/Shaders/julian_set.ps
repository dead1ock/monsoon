// Julian
float4 TexturePixelShader(PixelInputType input) : SV_TARGET
{	
	float x = 2 * (input.tex.x - 0.5);
	float y = 2 * (input.tex.y - 0.5);
	
	int i = 0;
	for(i = 0; i < 1000; i++) {
		float x2 = (x * x - y * y) + 0.39;
		float y2 = (y * x + x * y) + -0.2;
		
		if((x * x + y * y) > 4.0) break;
		x = x2;
		y = y2;
	}
	
	float v = (i == 1000 ? 0.0 : float(i)) / 100.0;
	return float4(v/0.5, v, v/0.25, v);
	
	
}